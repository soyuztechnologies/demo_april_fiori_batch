<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m"
                         xmlns:f="sap.ui.layout.form">
    <f:SimpleForm>
        <f:content>
            <Label text="Name"></Label>
            <Text text="{NAME}"></Text>
            <Label text="Health Benefit"></Label>
            <Text text="{DESCRIPTION}"></Text>
            <Label text="Cost"></Label>
            <Text text="{PRICE} {CURRENCY_CODE}"></Text>
            <Label text="Supplier"></Label>
            <Text text="{SUPPLIER_NAME}"></Text>
            <core:Title text="Supplier Data" />
            <Label text="Email Address"></Label>
            <Text text="{To_Supplier/EMAIL_ADDRESS}"></Text>
            <Label text="Contact No"></Label>
            <Text text="{To_Supplier/PHONE_NUMBER}"></Text>
            <Label text="Address"></Label>
            <Text text="{To_Supplier/CITY}, {To_Supplier/COUNTRY}"></Text>    
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>